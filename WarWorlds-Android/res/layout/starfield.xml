<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <au.com.codeka.warworlds.ctrl.BannerAdView
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true" />

    <au.com.codeka.warworlds.game.starfield.StarfieldSurfaceView
        android:id="@+id/starfield"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_pane"
        android:layout_below="@id/ad"
        android:layout_marginBottom="-4px" />

    <au.com.codeka.warworlds.ctrl.MiniChatView
        android:id="@+id/mini_chat"
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:layout_above="@+id/bottom_pane"
        android:layout_marginBottom="-4px" />

    <RelativeLayout
        android:id="@+id/bottom_pane"
        style="@style/BottomPane"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false">

        <FrameLayout
            android:id="@+id/selection_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/empire_btn">

            <FrameLayout
                android:id="@+id/loading_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" >

                <ProgressBar
                    android:id="@+id/star_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp" />
            </FrameLayout>

            <RelativeLayout android:id="@+id/selected_star"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/star_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/app_icon" />

                <TextView
                    android:id="@+id/star_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/star_icon"
                    android:text="Star Name"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/star_details_btn"
                    style="@style/Button"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="View" />

                <Button
                    android:id="@+id/star_report_btn"
                    style="@style/Button"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/star_details_btn"
                    android:text="Intel." />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/star_icon"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/star_details_btn"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/planet_list"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" >
                    </ListView>
    
                    <ListView
                        android:id="@+id/fleet_list"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" >
                    </ListView>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout android:id="@+id/selected_fleet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"  >

                <ImageView android:id="@+id/fleet_icon"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_alignParentLeft="true"
                           android:layout_alignParentTop="true"
                           android:src="@drawable/fleet" />

                <ImageView android:id="@+id/empire_icon"
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:layout_alignBottom="@+id/fleet_icon"
                           android:layout_toRightOf="@+id/fleet_icon"
                           android:src="@drawable/fleet_single" />

                <TextView android:id="@+id/fleet_design"
                          android:layout_width="wrap_content"
                          android:layout_height="20dp"
                          android:layout_alignParentRight="true"
                          android:layout_alignParentTop="true"
                          android:layout_toRightOf="@+id/fleet_icon"
                          android:gravity="center_vertical"
                          android:text="Fleet Design"
                          android:textSize="18dp" />

                <TextView android:id="@+id/empire_name"
                          android:layout_width="wrap_content"
                          android:layout_height="20dp"
                          android:layout_alignBottom="@+id/empire_icon"
                          android:layout_toRightOf="@+id/empire_icon"
                          android:gravity="center_vertical"
                          android:text="Empire Name" />

                <TextView android:id="@+id/fleet_details"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentBottom="true"
                          android:layout_alignParentLeft="true"
                          android:layout_alignParentRight="true"
                          android:layout_below="@+id/fleet_icon"
                          android:layout_marginBottom="8dp"
                          android:layout_marginLeft="8dp"
                          android:layout_marginRight="8dp"
                          android:layout_marginTop="8dp"
                          android:text="Fleet Details" />

            </RelativeLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/cash"
            android:layout_alignBaseline="@+id/empire_btn"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/reports_btn"
            android:layout_alignBaseline="@+id/empire_btn"
            android:paddingLeft="5dip"
            android:paddingRight="10dip"
            android:text="$12,345"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/reports_btn"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sit. Rep."
            android:layout_toLeftOf="@+id/empire_btn"
            android:layout_alignBaseline="@+id/empire_btn" />

        <Button
            android:id="@+id/empire_btn"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="@string/empire" />

    </RelativeLayout>

</RelativeLayout>