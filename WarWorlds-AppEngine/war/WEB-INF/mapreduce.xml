<?xml version="1.0"?>

<configurations>
  <configuration name="delete-all-entities">
    <property>
      <name>mapreduce.map.class</name>
      <value>au.com.codeka.warworlds.server.mappers.DebugDeleteAllEntitiesMapper</value>
    </property>

    <!--  This is a default tool that lets us iterate over datastore entities -->
    <property>
      <name>mapreduce.inputformat.class</name>
      <value>com.google.appengine.tools.mapreduce.DatastoreInputFormat</value>
    </property>
    <property>
      <name human="Entity Kind to delete">mapreduce.mapper.inputformat.datastoreinputformat.entitykind</name>
      <value template="optional">StarData</value>
    </property>
  </configuration>
</configurations>