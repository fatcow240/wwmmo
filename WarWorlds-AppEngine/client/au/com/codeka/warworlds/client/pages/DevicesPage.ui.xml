<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
	    <div id="devices">
	    	<h1>Devices</h1>
	    	<p>Not much to see here yet. Enter a user's email address and a message and we'll
	    	post it to them via C2DM (if they're registered with us, that is)</p>
	    	<fieldset>
	    		<legend>Post Message</legend>
	    		
	    		<div class="field">
	    			<label for="userEmail">Email:</label>
	    			<input ui:field="mUserEmail" />
	    		</div>
	    		<div class="field">
	    			<label for="message">Message:</label>
	    			<input ui:field="mMessage" />
	    		</div>
	    		<g:Button ui:field="mPostMessage">Post</g:Button>
	    	</fieldset>
	    </div>
   </g:HTMLPanel>
</ui:UiBinder>
