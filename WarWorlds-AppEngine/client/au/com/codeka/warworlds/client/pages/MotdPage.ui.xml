<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
    	<style>
    		#motd .curr-motd {
    			width: 400px;
    			height: 544px;
    			border: solid 2px black;
    			margin-right: 2.5%;
    			float: left;
    		}
    		
    		#motd .curr-motd legend {
    			font-weight: bold;
    			color: #900;
    		}
    		
    		#motd .curr-motd div {
    			overflow-y: scroll;
    			height: 524px;
    		}
    		
    		#motd .new-motd {
    			margin-left: 425px;
    			margin-right: 25px;
    		}
    		
    		#motd .new-motd textarea {
    			width: 95%;
    			height: 500px;
    		}
    	</style>
	    <div id="motd">
	    	<h1>Message of the Day</h1>
	    	<fieldset class="curr-motd">
	    		<legend>Current Message</legend>
	    		<div ui:field="currMotd"></div>
	    	</fieldset>
	    	
	    	<div class="new-motd">
	    		<textarea ui:field="newMotd"></textarea>
	    		<g:Button ui:field="saveMotd">Update</g:Button>
	    	</div>
	    	
	    </div>
   </g:HTMLPanel>
</ui:UiBinder>
