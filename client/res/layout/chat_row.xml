<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/empire_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:src="@drawable/app_icon" />

    <TextView
        android:id="@+id/empire_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/empire_icon"
        android:layout_toRightOf="@+id/empire_icon"
        android:layout_marginLeft="4dp"
        android:text="Empire Name" />

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/empire_name"
        android:layout_marginRight="4dp"
        android:text="9:45 PM" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/empire_icon"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/tablet_margin_5dp"
        android:layout_marginRight="@dimen/tablet_margin_5dp"
        android:text="Blah blah blah, yada yada yada." />

    <View android:id="@+id/separator"
          android:layout_width="match_parent"
          android:layout_height="8dp"
          android:layout_below="@+id/message"
          android:background="#00000000" />
</RelativeLayout>