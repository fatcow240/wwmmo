<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/fleet_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/app_icon" />
    <ImageView
        android:id="@+id/empire_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/app_icon" />

    <ImageView
        android:id="@+id/target_fleet_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/app_icon" />
    <ImageView
        android:id="@+id/target_empire_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/app_icon" />

    <TextView
        android:id="@+id/record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fleet_icon"
        android:text="Fleet Targetted"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/record_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/record_title"
        android:layout_below="@+id/record_title"
        android:layout_toLeftOf="@+id/target_fleet_icon"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla tincidunt sagittis orci, rhoncus ultricies tortor commodo sed. "
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>