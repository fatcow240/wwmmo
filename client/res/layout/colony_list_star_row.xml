<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/star_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="4dp" />

    <TextView
        android:id="@+id/star_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/star_icon"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Star Name" />

    <TextView
        android:id="@+id/star_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/star_name"
        android:layout_toRightOf="@+id/star_icon"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Black Hole" />

    <ImageView android:id="@+id/farming_icon"
               android:layout_width="18dp"
               android:layout_height="18dp"
               android:layout_alignTop="@+id/star_icon"
               android:layout_marginTop="1dp"
               android:layout_marginRight="4dp"
               android:layout_alignParentRight="true"
               android:src="@drawable/farming_white" />

    <TextView android:id="@+id/star_goods_delta"
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:layout_toLeftOf="@id/farming_icon"
              android:layout_alignTop="@+id/star_icon"
              android:layout_marginRight="4dp"
              android:gravity="center"
              android:textColor="#0f0"
              android:textSize="10sp"
              android:text="" />

    <TextView android:id="@+id/star_goods_total"
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:layout_alignTop="@+id/star_icon"
              android:layout_toLeftOf="@id/star_goods_delta"
              android:layout_marginRight="5dp"
              android:gravity="center"
              android:text=""
              android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView android:id="@+id/mining_icon"
               android:layout_width="18dp"
               android:layout_height="18dp"
               android:layout_alignBottom="@+id/star_icon"
               android:layout_marginBottom="1dp"
               android:layout_marginRight="4dp"
               android:layout_alignParentRight="true"
               android:src="@drawable/mining_white" />

    <TextView android:id="@+id/star_minerals_delta"
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:layout_toLeftOf="@id/mining_icon"
              android:layout_alignBottom="@+id/star_icon"
              android:layout_marginRight="4dp"
              android:gravity="center"
              android:textColor="#0f0"
              android:textSize="10sp"
              android:text="" />

    <TextView android:id="@+id/star_minerals_total"
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:layout_alignBottom="@+id/star_icon"
              android:layout_toLeftOf="@id/star_minerals_delta"
              android:layout_marginRight="5dp"
              android:gravity="center"
              android:text=""
              android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>