<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/building_timetobuild_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Time to build:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/building_timetobuild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/building_timetobuild_label"
        android:layout_toRightOf="@id/building_timetobuild_label"
        android:layout_marginLeft="10dp"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/building_mineralstobuild_label"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@+id/building_timetobuild_label"
        android:layout_alignRight="@+id/building_timetobuild_label"
        android:src="@drawable/mining_white" />

    <TextView
        android:id="@+id/building_mineralstobuild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/building_timetobuild_label"
        android:layout_toRightOf="@id/building_timetobuild_label"
        android:layout_marginLeft="10dp"
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>