<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Graphics"
                        android:key="pref_key_graphics">
        <ListPreference android:key="GlobalOptions.StarfieldDetail"
                        android:title="Starfield Detail"
                        android:defaultValue="STARS_AND_GAS" />
        <CheckBoxPreference android:key="GlobalOptions.GenUniqueStarsAndPlanets"
                            android:title="Unique Stars &amp; Planets"
                            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Chat"
                        android:key="pref_key_chat">
        <CheckBoxPreference android:key="GlobalOptions.AutoTranslateChatMessages"
                            android:title="Auto-translate"
                            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Crash Reports"
                        android:key="pref_key_crash_reports">
        <ListPreference android:key="GlobalOptions.AutoSendCrashReports"
                        android:title="Auto-send Crash Reports"
                        android:defaultValue="Ask" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Notifications"
                        android:key="pref_key_notifications">
        <CheckBoxPreference android:key="GlobalOptions.EnableNotifications"
                            android:title="Enable Notifications"
                            android:defaultValue="true" />
