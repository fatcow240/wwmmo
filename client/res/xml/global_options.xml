                          android:title="Building constructed"
                          android:dependency="GlobalOptions.EnableNotifications">
            <CheckBoxPreference android:key="GlobalOptions.Notifications[BUILDING_BUILD_COMPLETE].Enabled"
                                android:title="Notification Enabled"
                                android:defaultValue="true" />
            <RingtonePreference android:key="GlobalOptions.Notifications[BUILDING_BUILD_COMPLETE].Ringtone"
                                android:ringtoneType="notification"
                                android:title="Ringtone"
                                android:showDefault="true"
                                android:showSilent="true"
                                android:dependency="GlobalOptions.Notifications[BUILDING_BUILD_COMPLETE].Enabled" />
            <ListPreference android:key="GlobalOptions.Notifications[BUILDING_BUILD_COMPLETE].LedColour"
                            android:summary=""
                            android:title="LED Color"
                            android:defaultValue="#FF0000"
                            android:dependency="GlobalOptions.Notifications[BUILDING_BUILD_COMPLETE].Enabled" />
        </PreferenceScreen>
